@model BiF.Web.ViewModels.Manage.ChangePasswordVM
@{
    ViewBag.Title = "BeerItForward | Change Password";
}

<div class="body-content" style="width: 400px">
    <h2>Change Password</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div>
            Current Password
            <div>
                @Html.PasswordFor(m => m.OldPassword)
            </div>
        </div>
        <hr/>
        <div>
            New Password
            <div>
                @Html.PasswordFor(m => m.NewPassword)
            </div>
        </div>
        <div>
            Confirm New Password
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div style="margin-top: 15px">
            <input type="submit" value="Update" />
            <input type="button" value="Cancel" onclick="window.locaation = '@Url.Action("", "Home")'" />
        </div>
    }
</div>
