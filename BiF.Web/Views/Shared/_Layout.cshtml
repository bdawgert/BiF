<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
</head>
<body>
<div class="header-bar">
    <img src="~/Content/img/logo.png" style="margin: 10px;" />
</div>

<div class="navigation-bar">
    <div class="navigation-menu">
        <div class="bar-item">@Html.ActionLink("Home", "Index", "Home")</div>
        @if (Request.IsAuthenticated) {
            <div class="bar-item">@Html.ActionLink("My Profile", "Index", "Profile")</div>
        }
        @if (Request.IsAuthenticated && false) {
            <div class="bar-item">@Html.ActionLink("Exchanges", "Index", "Exchanges")</div>
        }
        <div class="bar-item">@Html.ActionLink("Contact", "Contact", "Home")</div>
    </div>
    <div>
        @Html.Partial("_LoginPartial")
    </div>
</div>
<div class="main-content">
    @RenderBody()
</div>

@RenderSection("scripts", required: false)
</body>
</html>
